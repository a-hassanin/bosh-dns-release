#!/bin/bash
set -eu -o pipefail

set -x

REPO_DIR="$( cd "$( dirname "${0}" )" && cd .. && pwd )"

grep -ri panic src/bosh-dns \
  --exclude-dir vendor \
  --exclude-dir test_yml_assets \
  --exclude-dir performance_tests \
  --exclude-dir acceptance_tests \
  --exclude-dir integration-tests \
  --exclude-dir gomega-dns && echo "panics detected in the code -- remove them" && exit 1

"${REPO_DIR}/scripts/lint"

pushd src/bosh-dns
  "${REPO_DIR}/scripts/ginkgo" -skipPackage=acceptance_tests,integration-tests,performance_tests,test_yml_assets .
  "${REPO_DIR}/scripts/ginkgo" integration-tests
popd

pushd src/debug
  "${REPO_DIR}/scripts/ginkgo" -p .
popd
